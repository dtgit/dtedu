	<div class="formControls" i18n:domain="plone">
	  <input class="context"
		 type="submit"
		 name="form.button.Return"
		 value="Return"
		 i18n:attributes="value label_ok;"
		 tal:attributes="tabindex tabindex/next;"
		 tal:condition="request/paths|nothing"/>
	</div>

